{% extends '@Synapse/admin_v2/layout/base.html.twig' %}

{% block v2_page_title %}Tons de réponse | Intelligence | Synapse Admin V2{% endblock %}

{% block v2_breadcrumb %}
	<span class="sv2-topbar__breadcrumb-sep">›</span>
	<a href="{{ path('synapse_v2_admin_providers') }}" class="sv2-topbar__breadcrumb">Intelligence</a>
	<span class="sv2-topbar__breadcrumb-sep">›</span>
	<span class="sv2-topbar__current">Tons de réponse</span>
{% endblock %}

{% block v2_content %}

	<div class="sv2-page-header">
		<div class="sv2-page-header__info">
			<h1 class="sv2-page-title">
				<span class="sv2-page-title__icon sv2-kpi__icon--primary">
					<i data-lucide="mic-2"></i>
				</span>
				Tons de réponse
			</h1>
			<p class="sv2-page-subtitle">
				Définissez le style de communication de votre IA. Les tons agissent uniquement sur le registre et le format
				des réponses, jamais sur la capacité de raisonnement.
			</p>
		</div>
		<div class="sv2-page-header__actions">
			<a href="{{ path('synapse_v2_admin_tones_new') }}" class="sv2-btn sv2-btn--primary">
				<i data-lucide="plus"></i>
				Nouveau ton
			</a>
		</div>
	</div>

	<div class="sv2-grid sv2-grid--2">
		{% for tone in tones %}
			<div class="sv2-card sv2-card--hover {{ not tone.isActive ? 'sv2-card--inactive' : '' }}">

				<div class="sv2-card__header">
					<div class="sv2-card__header-icon sv2-kpi__icon--primary" style="font-size: 1.5rem; width: 2.5rem; height: 2.5rem; display: flex; align-items: center; justify-content: center;">
						{{ tone.emoji }}
					</div>

					<div class="sv2-flex sv2-flex-col sv2-gap-sm">
						<div class="sv2-flex sv2-items-center sv2-gap-sm">
							<span class="sv2-card__title">{{ tone.name }}</span>
							{% if tone.isBuiltin %}
								<span class="sv2-badge sv2-badge--neutral" data-sv2-tooltip="Ton intégré au bundle — ne peut pas être supprimé">
									<i data-lucide="lock"></i>
									Builtin
								</span>
							{% endif %}
							{% if not tone.isActive %}
								<span class="sv2-badge sv2-badge--warning">
									<i data-lucide="eye-off"></i>
									Inactif
								</span>
							{% endif %}
						</div>
						<div class="sv2-text-sm sv2-text-muted">
							<code class="sv2-font-mono" style="font-size: 0.75rem;">{{ tone.key }}</code>
						</div>
					</div>
				</div>

				<div class="sv2-card__body sv2-card__body--compact">
					<p class="sv2-text-sm sv2-text-muted sv2-mb-md">{{ tone.description }}</p>

					<details class="sv2-collapsible">
						<summary class="sv2-collapsible__summary">
							<div class="sv2-collapsible__icon">
								<i data-lucide="file-text"></i>
							</div>
							<div class="sv2-collapsible__title">
								Prompt système
								<div class="sv2-collapsible__subtitle">
									{{ tone.systemPrompt|slice(0, 60) ~ '…' }}
								</div>
							</div>
							<i data-lucide="chevron-down" class="sv2-collapsible__chevron"></i>
						</summary>
						<div class="sv2-collapsible__content">
							<p class="sv2-text-sm sv2-font-mono" style="white-space: pre-wrap; word-break: break-word;">{{ tone.systemPrompt }}</p>
						</div>
					</details>
				</div>

				<div class="sv2-card__footer" style="overflow: visible;">
					<div class="sv2-flex sv2-gap-md sv2-items-center" style="position: relative; z-index: 10;">

						{# Modifier #}
						<form action="{{ path('synapse_v2_admin_tones_edit', {id: tone.id}) }}" method="GET" class="sv2-form-inline">
							<button type="submit" class="sv2-btn sv2-btn--ghost sv2-btn--icon sv2-btn--sm" data-sv2-tooltip="Modifier">
								<i data-lucide="edit-3"></i>
							</button>
						</form>

						{# Activer / Désactiver #}
						<form action="{{ path('synapse_v2_admin_tones_toggle', {id: tone.id}) }}" method="POST" class="sv2-form-inline">
							<input type="hidden" name="_token" value="{{ csrf_token('synapse_v2_tone_toggle_' ~ tone.id) }}">
							<button type="submit" class="sv2-btn sv2-btn--ghost sv2-btn--icon sv2-btn--sm"
									data-sv2-tooltip="{{ tone.isActive ? 'Désactiver' : 'Activer' }}">
								{% if tone.isActive %}
									<i data-lucide="eye-off"></i>
								{% else %}
									<i data-lucide="eye"></i>
								{% endif %}
							</button>
						</form>

						{# Supprimer (désactivé si builtin) #}
						<form action="{{ path('synapse_v2_admin_tones_delete', {id: tone.id}) }}" method="POST" class="sv2-form-inline"
							{% if not tone.isBuiltin %}onsubmit="return confirm('Supprimer le ton « {{ tone.name }} » ?')"{% endif %}>
							<input type="hidden" name="_token" value="{{ csrf_token('synapse_v2_tone_delete_' ~ tone.id) }}">
							<button type="submit" class="sv2-btn sv2-btn--ghost sv2-btn--icon sv2-btn--sm sv2-text-danger"
									data-sv2-tooltip="{{ tone.isBuiltin ? 'Builtin — non supprimable' : 'Supprimer' }}"
									{% if tone.isBuiltin %}disabled{% endif %}>
								<i data-lucide="trash-2"></i>
							</button>
						</form>

					</div>
				</div>

			</div>
		{% else %}
			<div class="sv2-empty-state" style="grid-column: 1 / -1;">
				<i data-lucide="mic-off" class="sv2-empty-state__icon"></i>
				<p class="sv2-empty-state__title">Aucun ton configuré</p>
				<p class="sv2-empty-state__subtitle">Lancez la fixture ou créez votre premier ton personnalisé.</p>
				<a href="{{ path('synapse_v2_admin_tones_new') }}" class="sv2-btn sv2-btn--primary sv2-mt-md">
					<i data-lucide="plus"></i>
					Créer un ton
				</a>
			</div>
		{% endfor %}
	</div>

{% endblock %}
