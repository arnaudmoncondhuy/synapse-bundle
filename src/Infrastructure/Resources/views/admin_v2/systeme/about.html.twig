{% extends '@Synapse/admin_v2/layout/base.html.twig' %}

{% block v2_page_title %}À propos | Système | Synapse Admin V2
{% endblock %}

{% block v2_breadcrumb %}
	<span class="sv2-topbar__breadcrumb-sep">›</span>
	<a href="#" class="sv2-topbar__breadcrumb">Système</a>
	<span class="sv2-topbar__breadcrumb-sep">›</span>
	<span class="sv2-topbar__current">À propos</span>
{% endblock %}

{% block v2_content %}

	{# ── En-tête ──────────────────────────────────────────────────────────────── #}
	<div class="sv2-page-header">
		<div class="sv2-page-header__info">
			<h1 class="sv2-page-title">
				<span class="sv2-page-title__icon sv2-kpi__icon--primary">
					<i data-lucide="info"></i>
				</span>
				À propos de Synapse
			</h1>
			<p class="sv2-page-subtitle">
				Informations sur le bundle, la version et les dépendances de l'environnement.
			</p>
		</div>
	</div>

	{# ── Carte principale ─────────────────────────────────────────────────────── #}
	<div
		class="sv2-grid sv2-grid--2 sv2-mb-xl">

		{# Version du bundle #}
		<div class="sv2-card sv2-card--active">
			<div class="sv2-card__header">
				<div class="sv2-card__header-icon sv2-kpi__icon--primary">
					<i data-lucide="package"></i>
				</div>
				<div>
					<div class="sv2-card__title">Synapse Bundle</div>
					<div class="sv2-card__subtitle">arnaud-moncondhuy/synapse-bundle</div>
				</div>
				<div class="sv2-card__header-actions">
					<span class="sv2-badge sv2-badge--primary">{{ version }}</span>
				</div>
			</div>
			<div class="sv2-card__body sv2-card__body--compact">
				<div class="sv2-grid sv2-grid--2">
					<div>
						<div class="sv2-text-xs sv2-text-tertiary sv2-font-bold">PHP</div>
						<div class="sv2-font-mono sv2-text-sm sv2-mt-sm">{{ php_version }}</div>
					</div>
					<div>
						<div class="sv2-text-xs sv2-text-tertiary sv2-font-bold">Symfony</div>
						<div class="sv2-font-mono sv2-text-sm sv2-mt-sm">{{ symfony_version }}</div>
					</div>
				</div>
			</div>
		</div>

		{# Liens utiles #}
		<div class="sv2-card sv2-card--hover">
			<div class="sv2-card__header">
				<div class="sv2-card__header-icon sv2-kpi__icon--neutral">
					<i data-lucide="link"></i>
				</div>
				<div>
					<div class="sv2-card__title">Ressources</div>
					<div class="sv2-card__subtitle">Documentation et support</div>
				</div>
			</div>
			<div class="sv2-card__body sv2-card__body--compact">
				<div class="sv2-flex sv2-flex-col sv2-gap-sm">
					<a href="https://github.com/arnaud-moncondhuy/synapse-bundle" class="sv2-btn sv2-btn--ghost sv2-btn--sm" target="_blank" rel="noopener">
						<i data-lucide="github"></i>
						GitHub
					</a>
					<a href="{{ path('synapse_v2_admin_health') }}" class="sv2-btn sv2-btn--ghost sv2-btn--sm">
						<i data-lucide="activity"></i>
						Santé système
					</a>
				</div>
			</div>
		</div>

	</div>

	{# ── Dépendances ──────────────────────────────────────────────────────────── #}
	<div class="sv2-card">
		<div class="sv2-card__header">
			<div class="sv2-card__header-icon sv2-kpi__icon--neutral">
				<i data-lucide="layers"></i>
			</div>
			<div>
				<div class="sv2-card__title">Dépendances principales</div>
				<div class="sv2-card__subtitle">Packages Composer requis par le bundle</div>
			</div>
		</div>

		<div class="sv2-table-container">
			<table class="sv2-table">
				<thead>
					<tr>
						<th>Package</th>
						<th>Contrainte</th>
						<th>Statut</th>
					</tr>
				</thead>
				<tbody>
					{% for package, constraint in dependencies %}
						<tr>
							<td>
								<div class="sv2-table-cell-label">
									<div class="sv2-table-cell-label__icon sv2-kpi__icon--neutral">
										<i data-lucide="box"></i>
									</div>
									<div>
										<div class="sv2-table-cell-label__title">{{ package }}</div>
									</div>
								</div>
							</td>
							<td class="sv2-table__cell--mono sv2-text-xs">{{ constraint }}</td>
							<td>
								<span class="sv2-badge sv2-badge--success">
									<i data-lucide="check-circle-2"></i>
									OK
								</span>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

	</div>

	{# ── Crédit design ────────────────────────────────────────────────────────── #}
	<div class="sv2-alert sv2-alert--info sv2-mt-xl">
		<i data-lucide="sparkles"></i>
		<div>
			Interface
			<strong>Admin V2</strong>
			conçue avec le
			<strong>Synapse Design System</strong>
			(sv2-*) —
			        Glassmorphism, Lucide Icons, zéro style inline.
			<a href="{{ path('synapse_v2_admin_health') }}">Vérifier la santé système</a>.
		</div>
	</div>

{% endblock %}
