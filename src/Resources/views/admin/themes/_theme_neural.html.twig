.syn-input,
.syn-select,
.syn-textarea {
	background: rgba(0, 0, 0, 0.3);
	border: 1px solid var(--syn-border-light);
	color: var(--syn-color-primary);
	font-family: var(--syn-font-sans);
}

.syn-input:focus {
	border-color: var(--syn-color-primary);
	box-shadow: 0 0 10px var(--syn-color-primary-light);
}

