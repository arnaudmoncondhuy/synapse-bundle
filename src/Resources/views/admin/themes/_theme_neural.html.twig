.syn-title,
.syn-brand,
h1,
h2,
h3 {
	font-family: var(--syn-font-display);
	text-transform: uppercase;
	letter-spacing: 0.1em;
	text-shadow: 0 0 10px rgba(0, 243, 255, 0.5);
}

.syn-kpi-value {
	font-family: var(--syn-font-sans);
	color: var(--syn-color-primary);
