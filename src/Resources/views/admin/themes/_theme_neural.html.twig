/* 
     * THEME : NEURAL COMMAND (VISION 1)
     * Cyberpunk / HUD / Deep Space
     */:root
{
	/* Palette Neon */
	--syn-hue: 260;
	--syn-sat: 100%;

	--syn-color-primary: #00f3ff; /* Electric Cyan */
	--syn-color-primary-dark: #00bcd4;
	--syn-color-primary-light: rgba(0, 243, 255, 0.1);
	--syn-color-primary-fade: rgba(0, 243, 255, 0.05);

	--syn-color-secondary: #bd00ff; /* Electric Purple */

	--syn-color-success: #00ff9d;
	--syn-color-success-bg: rgba(0, 255, 157, 0.1);

	--syn-color-warning: #ffd600;
	--syn-color-warning-bg: rgba(255, 214, 0, 0.1);

	--syn-color-error: #ff0055;
	--syn-color-error-bg: rgba(255, 0, 85, 0.1);

	/* Deep Space Backgrounds */
	--syn-bg-main: #050510;
	--syn-bg-surface: rgba(20, 20, 40, 0.6);
	--syn-bg-sidebar: #020205;
	--syn-bg-card: rgba(255, 255, 255, 0.03);

	--syn-text-main: #e0e0ff;
	--syn-text-muted: #7ca0c0;
	--syn-text-light: #4a5d75;
	--syn-text-inverse: #000000;

	--syn-border: rgba(0, 243, 255, 0.2);
	--syn-border-light: rgba(255, 255, 255, 0.05);

	--syn-radius-sm: 4px;
	--syn-radius: 12px;
	--syn-radius-lg: 16px;
	--syn-radius-full: 9999px;

	--syn-shadow-sm: 0 0 10px rgba(0, 243, 255, 0.1);
